@model Sozif.Products

@{
    ViewData["Title"] = "Usuwanie produktu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Usuwanie produktu</h1>

<h3>Czy na pewno chcesz usunąć ten produkt?</h3>
<div>
    <h4>@Model.ProductName</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa produktu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            Cena netto
        </dt>
        <dd class="col-sm-10">
            @((Model.BaseNetPrice / 100.0).ToString("0.00")) zł
        </dd>
        <dt class = "col-sm-2">
            Stawka VAT
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaxRate.Rate)%
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy produktów</a>
    </form>
</div>
