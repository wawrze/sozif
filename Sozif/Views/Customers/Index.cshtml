@model IEnumerable<Sozif.Customers>

@{
    ViewData["Title"] = "Lista klientów";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista klientów</h1>

<p>
    @if (Context.Session.GetString("EditCustomers") == "true")
    {
        <a asp-action="Create"><input class="btn btn-primary" type="button" value="Dodaj klienta" /></a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa
            </th>
            <th>
                NIP
            </th>
            <th>
                Osoba do kontaktu
            </th>
            <th>
                Nr telefonu
            </th>
            <th>
                Adres
            </th>
        </tr>
    </thead>
    <tbody>
        @{ bool row = true; }
        @foreach (var item in Model)
        {
            row = !row;
            <tr onclick="location.href = '@(Url.Action("Details", "Customers", new { id = item.CustomerId }))'" class=@(row ? "d0" : "d1")>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NipString)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactPerson)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumberString)
                </td>
                <td>
                    @{
                        foreach (Addresses address in item.Addresses)
                        {
                            if (address.IsMainAddress)
                            {
                                <text>@address.FullAddress</text>
                            }
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>