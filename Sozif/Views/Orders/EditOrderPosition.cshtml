@model Sozif.OrderPositions

@{
    ViewData["Title"] = "Edycja pozycji zamówienia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edycja pozycji zamówienia</h1>

<hr />
<dl class="row">
    <dt class="col-sm-2">
        Numer zamówienia
    </dt>
    <dd class="col-sm-10">
        @ViewBag.OrderNumber
    </dd>
    <dt class="col-sm-2">
        Data zamówienia
    </dt>
    <dd class="col-sm-10">
        @ViewBag.OrderDate.ToString("yyyy-MM-dd", DateTimeFormatInfo.InvariantInfo)
    </dd>
    <dt class="col-sm-2">
        Klient
    </dt>
    <dd class="col-sm-10">
        @ViewBag.Customer.ToString()
    </dd>
    <dt class="col-sm-2">
        Adres realizacji
    </dt>
    <dd class="col-sm-10">
        @ViewBag.Address.FullAddress
    </dd>
</dl>
<hr />

<h4>Edycja pozycji</h4>
<h5 class="error-message">@ViewBag.ErrorMessage</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOrderPosition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label class="control-label">Produkt</label>
                <input class="form-control" value="@Model.Product.ProductName" disabled="disabled" />
            </div>
            <div class="form-group">
                <label class="control-label">Ilość</label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Rabat</label>
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@ViewBag.OrderId">Wróć do edycji zamówienia</a>
</div>

