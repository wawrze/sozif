@model Sozif.Models.PasswordChangeDTO

@{
    ViewData["Title"] = "Zmiana hasła";
}

<h1>Zmiana hasła</h1>

<h5 class="error-message">@(ViewBag.ErrorMessage)</h5>
<h5 class="success-message">@(ViewBag.SuccessMessage)</h5>

<div class="row">
    <div class="col-md-4">
        <form asp-action="PasswordChange">
            <div class="form-group">
                <label class="control-label">Dotychczasowe hasło</label>
                <input asp-for="OldPassword" type="password" class="form-control" value="@ViewBag.OldPassword" />
            </div>
            <div class="form-group">
                <label class="control-label">Nowe hasło</label>
                <input asp-for="NewPassword" type="password" class="form-control" value="@ViewBag.NewPassword" />
            </div>
            <div class="form-group">
                <label class="control-label">Potwierdź nowe hasło</label>
                <input asp-for="NewPasswordConfirmation" type="password" class="form-control" value="@ViewBag.NewPasswordConfirmation" />
            </div>
            <div class="form-group">
                <input type="submit" value="Zmień" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>