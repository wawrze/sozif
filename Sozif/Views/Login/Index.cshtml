@model Sozif.Models.LoginDTO

@{
    ViewData["Title"] = "Logowanie";
}

<h1>Logowanie</h1>

<h5 class="error-message">@(ViewBag.ErrorMessage)</h5>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div class="form-group">
                <label class="control-label">Nazwa użytkownika</label>
                <input asp-for="Username" class="form-control" value="@Model.Username"/>
            </div>
            <div class="form-group">
                <label class="control-label">Hasło</label>
                <input asp-for="Password" type="password" class="form-control" value="@Model.Password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Zaloguj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>