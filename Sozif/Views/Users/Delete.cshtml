@model Sozif.Users

@{
    ViewData["Title"] = "Usuwanie użytkownika \"" + @Model.Username + "\"";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Usuwanie użytkownika</h1>

<h3>Czy na pewno chcesz usunąć tego użytkownika?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa użytkownika
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2">
            Imię
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Firstname)
        </dd>
        <dt class = "col-sm-2">
            Nazwisko
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lastname)
        </dd>
        <dt class = "col-sm-2">
            Poziom uprawnień
        </dt>
        <dd class="col-sm-10">
            @Model.PermLevelNavigation.PermName (@Model.PermLevelNavigation.PermLevel)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy użytkowników</a>
    </form>
</div>
