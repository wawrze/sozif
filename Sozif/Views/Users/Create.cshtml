@model Sozif.Users

@{
    ViewData["Title"] = "Dodawanie nowego użytkownika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dodawanie nowego użytkownika</h1>

<h5 class="error-message">@ViewBag.ErrorMessage</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nazwa użytkownika</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Hasło</label>
                <input asp-for="Password" id="passwordInput" class="form-control" />
                <button type="button" id="passwordButton" class="btn btn-primary" onClick="generatePassword()">Generuj hasło</button>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Imię</label>
                <input asp-for="Firstname" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nazwisko</label>
                <input asp-for="Lastname" class="form-control" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Poziom uprawnień</label>
                <select asp-for="PermLevel" id="permLevelSelect" class="form-control" asp-items="ViewBag.PermLevel"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj użytkownika" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>

<div>
    <a asp-action="Index"><input class="btn btn-secondary" type="button" value="Wróć do listy użytkowników" /></a>
</div>

<script type="text/javascript">
    function generatePassword() {
        var generated = "";
        var possible = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!#$%^&*(),.;':";
        for (var i = 0; i < 10; i++) generated += possible.charAt(Math.floor(Math.random() * possible.length));
        document.getElementById("passwordInput").value = generated;
    }
</script>