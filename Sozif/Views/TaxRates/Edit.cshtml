@model Sozif.TaxRates

@{
    ViewData["Title"] = "Edycja stawki VAT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edycja stawki VAT</h1>

<h5 class="error-message">@ViewBag.ErrorMessage</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaxRateId" />
            <div class="form-group">
                <label class="control-label">Stawka</label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><input class="btn btn-secondary" type="button" value="Wróć do listy stawek VAT" /></a>
</div>

